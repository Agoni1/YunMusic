<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff9f9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/playlist_collectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="收藏全部" />

    <TextView
        android:id="@+id/playlist_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playlist_collectAll"
        android:layout_centerHorizontal="true"
        android:text="播放列表"
        android:textColor="@color/textDefault"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/playlist_cleanAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/playlist_collectAll"
        android:layout_marginRight="5dp"
        android:text="清空" />

    <View
        android:id="@+id/line_grey"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/playlist_collectAll"
        android:background="@color/line_grey" />
    <ListView
        android:divider="@null"
        android:layout_below="@id/line_grey"
        android:id="@+id/playlist_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>