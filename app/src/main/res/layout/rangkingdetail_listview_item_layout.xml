<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/rankingdetail_listview_item_img"
        android:layout_margin="10dp"
        android:background="@drawable/a8c"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <RelativeLayout
        android:id="@+id/namecontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/rankingdetail_listview_item_img"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/rankingdetail_listview_item_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:maxEms="10"
            android:singleLine="true"
            android:text="未知歌名"
            android:textColor="@color/textDefault"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/rankingdetail_listview_item_mv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/rankingdetail_listview_item_song_name"
            android:background="@drawable/little_mv"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center"
            android:text="MV"
            android:textColor="@color/ThemeRed"
            android:textSize="8sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/rankingdetail_listview_item_image_sq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namecontainer"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/rankingdetail_listview_item_img"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/sq"
        android:visibility="gone" />

    <TextView
        android:id="@+id/rankingdetail_listview_item_song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namecontainer"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rankingdetail_listview_item_image_sq"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:maxEms="15"
        android:singleLine="true"
        android:text="未知作者—专辑"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/rankingdetail_listview_item_img"
        android:background="@color/line_grey"
        android:clickable="false"
        android:focusable="false" />

    <ImageButton
        android:id="@+id/rankingdetail_listview_item_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/item_menu" />


</RelativeLayout>