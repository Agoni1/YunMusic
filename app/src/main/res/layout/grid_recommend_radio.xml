<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_recommend_radio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableLeft="@drawable/recommend_radio"
        android:text="@string/radio"
        android:textColor="@color/textDefault"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_recommend_radio_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_recommend_radio_title"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/kk"
        android:text="@string/more"
        android:textSize="12sp" />

    <!--   android:drawSelectorOnTop="true" 选中时有动态效果-->
    <com.example.agoni.yunmusic.view.MyGridView
        android:id="@+id/tv_recommend_radio_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_recommend_radio_title"
        android:layout_marginTop="5dp"
        android:drawSelectorOnTop="true"
        android:numColumns="3"></com.example.agoni.yunmusic.view.MyGridView>

</RelativeLayout>